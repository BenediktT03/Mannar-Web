 {
  "kind": "collectionType",
  "collectionName": "word_clouds",
  "info": {
    "singularName": "word-cloud",
    "pluralName": "word-clouds",
    "displayName": "Word Cloud",
    "description": "Bearbeitbare Word Clouds f√ºr spirituelle Themen"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "titel": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "beschreibung": {
      "type": "text"
    },
    "istAktiv": {
      "type": "boolean",
      "default": true
    },
    "sortierung": {
      "type": "integer",
      "default": 0
    },
    "woerter": {
      "type": "component",
      "repeatable": true,
      "component": "word-cloud.wort"
    },
    "hintergrundfarbe": {
      "type": "string",
      "default": "#ffffff"
    },
    "textfarbe": {
      "type": "string", 
      "default": "#333333"
    },
    "hoverfarbe": {
      "type": "string",
      "default": "#007bff"
    },
    "maxBreite": {
      "type": "integer",
      "default": 800
    },
    "maxHoehe": {
      "type": "integer", 
      "default": 600
    }
  }
}
